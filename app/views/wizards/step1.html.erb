<div class="gtco-section">
	<div class="gtco-container">
		<div class="row">
			<div class="col-md-6 animate-box">
				<h3>Get In Touch</h3>
        <ol class="breadcrumb">
          <li class='active'>Step 1</li>
          <li>Step 2</li>
          <li>Step 3</li>
        </ol>

        <%= simple_form_for @cir_wizard, as: :cir_wizard, url: validate_step_wizard_path do |f| %>
          <%= f.error_notification %>

          <%= hidden_field_tag :current_step, 'step1' %>
          <%= f.input :full_name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :email %>
          <%= f.input :id_card %>
          <%= f.input :country %>

          <%= f.submit 'Continue' %>
        <% end %>
			</div>
		</div>
	</div>
</div>
